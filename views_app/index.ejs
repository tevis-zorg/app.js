<!DOCTYPE html>
<html lang="en">

    <%- include('./partials_views_app/head.ejs') %> 

    <body>
        
        <%- include('./partials_views_app/nav.ejs')  %>
        
        <div class="blogs_content">
            <h2>
                All blogs
            </h2>
            <% if (blogs.length> 0) { %>
                <% blogs.forEach(blog=> { %>

                    <h3 class="blog_title">
                        <%= blog.title %>
                    </h3>
                    <p class="blog_snippet">
                        <%= blog.snippet %>
                    </p>

                    <% }) %>
                        <% } else { %>
                            <h3>There are no blog to display</h3>
                            <% } %>
        </div>
        
        <%- include('./partials_views_app/footer.ejs')  %>
        
    </body>

</html>